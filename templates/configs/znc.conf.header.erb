// Also check http://en.znc.in/wiki/Configuration

AnonIPLimit = 10
ConnectDelay = 5
LoadModule = webadmin
<% if @auth_type == 'sasl' -%>
LoadModule = saslauth saslauthd
<% end -%>
MaxBufferSize = 500
<% if @motd -%>
Motd = <%= @motd %>
<% end -%>
ProtectWebSessions = true
ServerThrottle = 30
Version = 1.4

<Listener listener0>
        AllowIRC = true
        AllowWeb = true
        Port = <%= @port %>
        IPv4 = true
        IPv6 = <%= @ipv6 %>
        SSL = true
</Listener>

