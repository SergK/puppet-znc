<User <%= @name %>>
        Pass       = plain#<%= @pass %>
        Admin      = <%= @admin %>
        Nick       = <%= @name %>
        AltNick    = <%= @name %>_
        Ident      = <%= @name %>
        RealName   = <%= @realname %>
        Buffer     = 50
        AutoClearChanBuffer = true
        ChanModes  = +stn

        LoadModule = chansaver
        LoadModule = controlpanel
        LoadModule = perform
        LoadModule = webadmin

        <Network freenode>
                LoadModule = chansaver
                LoadModule = keepnick
                LoadModule = kickrejoin
                LoadModule = nickserv
                LoadModule = perform
                LoadModule = simple_away

                Server     = <%= @server %> <% if @ssl == 'true' -%>+<% end -%><%= @port %>

                <%- if @default_channel -%>
                <Chan <%= @default_channel %>>
                </Chan>
                <%- end -%>
        </Network>
</User>
