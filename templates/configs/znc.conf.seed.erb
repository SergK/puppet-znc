<User <%= @name %>>
        Admin      = <%= @admin %>
        Allow      = *
        Nick       = <%= @name %>
        AltNick    = <%= @name %>_
        Ident      = <%= @name %>
        RealName   = <%= @realname %>
        AutoClearChanBuffer = true
        Buffer     = 50
        ChanModes  = +stn
        QuitMsg = Bye

        LoadModule = chansaver
        LoadModule = controlpanel
        LoadModule = perform
        LoadModule = webadmin

        <Network freenode>
                LoadModule = chansaver
                LoadModule = keepnick
                LoadModule = kickrejoin
                LoadModule = nickserv
                LoadModule = perform
                LoadModule = simple_away

                Server     = <%= @server %> <% if @ssl == 'true' -%>+<% end -%><%= @port %>

                <%- if @default_channel -%>
                <Chan <%= @default_channel %>>
                </Chan>
                <%- end -%>
                <% @channels.each do |channel| %>
                <Chan <%= channel %>>
                </Chan>
                <%- end -%>
        </Network>

        <Pass password>
                Hash = <%= @pass %>
                Method = Plain
        </Pass>
</User>
